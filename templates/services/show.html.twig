{% extends 'baseDashboard.html.twig' %}

{% block title %}Services{% endblock %}


{% block body %}
<main style="margin-top: 58px;">
	<div class="container pt-4">
    <h1>Services</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ service.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ service.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ service.image }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ service.slug }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ service.status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_services_index') }}">back to list</a>

    <a href="{{ path('app_services_edit', {'id': service.id}) }}">edit</a>

    {{ include('services/_delete_form.html.twig') }}
    </div></main>
{% endblock %}
